# ===========================================
# ATLASFORGE ENVIRONMENT CONFIGURATION
# ===========================================

# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/atlasforge?schema=public"

# JWT
JWT_SECRET=atlasforge-dev-secret-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=atlasforge-refresh-secret-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Stripe (only for ecommerce app)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Upload (S3/R2)
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=auto

# Email
EMAIL_FROM=noreply@atlasforge.dev
RESEND_API_KEY=

# Owner Panel
OWNER_DOMAIN=atlasforge.localhost
OWNER_SECRET=owner-secret-change-in-production

# Cloudflare (domain automation)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
